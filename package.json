{
	"name": "@asyomei/begemot-bot",
	"version": "0.0.1",
	"license": "MIT",
	"private": "true",
	"scripts": {
		"build": "del-cli dist && swc src --strip-leading-paths -Dd dist --ignore **/*.spec.*",
		"dist": "node --enable-source-maps dist/main.js",
		"start": "ts-node src/main.ts",
		"dev": "nodemon --signal SIGHUP src/main.ts",
		"test": "tsc -b && pnpm run check && jest",
		"check": "biome check --apply src"
	},
	"dependencies": {
		"@grammyjs/auto-retry": "^1.1.1",
		"@grammyjs/ratelimiter": "^1.2.0",
		"@grammyjs/runner": "^2.0.3",
		"@grammyjs/transformer-throttler": "^1.2.1",
		"@messageformat/core": "^3.3.0",
		"@prisma/client": "^5.8.1",
		"@swc/core": "^1.3.107",
		"dotenv": "^16.4.1",
		"envalid": "^8.0.0",
		"glob": "^10.3.10",
		"grammy": "^1.20.3",
		"redis": "^4.6.12",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"yaml": "^2.3.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"@swc/cli": "^0.3.5",
		"@swc/jest": "^0.2.31",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.10",
		"del-cli": "^5.1.0",
		"jest": "^29.7.0",
		"jest-extended": "^4.0.2",
		"nodemon": "^3.0.3",
		"prisma": "^5.8.1",
		"typescript": "^5.3.3"
	},
	"pnpm": {
		"overrides": {
			"whatwg-url": "13.0.0"
		}
	}
}
